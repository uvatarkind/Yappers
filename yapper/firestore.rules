rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read all profiles but only edit their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chats - users can only access chats they're part of
    match /chats/{chatId} {
      // Allow read/write on the chat document itself for participants
      allow read, write: if request.auth != null &&
        request.auth.uid in resource.data.participants;

      // Messages subcollection under a chat
      // Allow participants of the parent chat to read/write its messages
      match /messages/{messageId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
    
    // (Optional legacy) Top-level messages collection rule
    // Keeping this for safety if a top-level messages collection exists,
    // but your app writes to chats/{chatId}/messages/*.
    match /messages/{messageId} {
      allow read, write: if false; // explicitly deny unless you use it
    }
  }
}
