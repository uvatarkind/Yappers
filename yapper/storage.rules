rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Require auth for all access
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Optionally, scope to specific chat folders
    match /chat_files/{chatId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    match /chat_voice/{chatId}/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
